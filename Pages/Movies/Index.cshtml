    <div class="col-md-10">
        <div class="card-body">
            <h1>Index</h1>
            <p>
                <a class="btn btn-primary" asp-page="Create">@mensaje</a>
            </p>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead style="text-align: center;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].Genre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Movie[0].Price)
                            </th>
                            <th>
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Movie)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Genre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td style="text-align: center;">
                                    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i
                                        class="bi bi-pencil"></i> Edit</a>
                                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id"> <i
                                        class="bi bi-journal-text"></i>Details</a>
                                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i
                                        class="bi bi-trash"></i>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

